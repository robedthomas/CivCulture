<UserControl x:Class="CivCulture.Views.TechTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CivCulture.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <local:TechnologyBubbleView DataContext="{Binding PermanentSettlementIViewModel}" Margin="0,0,0,0" />
        <Line X1="445" Y1="225" X2="580" Y2="225" Stroke="Black" StrokeThickness="4" />
        <local:TechnologyBubbleView DataContext="{Binding AgricultureIViewModel}" Margin="350,-300,0,0" />
        <Line X1="445" Y1="225" X2="537" Y2="100" Stroke="Black" StrokeThickness="4" />
        <local:TechnologyBubbleView DataContext="{Binding OrganizedLaborIViewModel}" Margin="450,0,0,0" />
        
        
        <local:TechnologyBubbleView DataContext="{Binding ElderReverenceIViewModel}" Margin="0,300,0,0" />
        <Line X1="445" Y1="375" X2="525" Y2="450" Stroke="Black" StrokeThickness="4" />
        <local:TechnologyBubbleView DataContext="{Binding ElderReverenceIIViewModel}" Margin="350,400,0,0" />
    </Grid>
</UserControl>
